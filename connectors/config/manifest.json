{
	"name": "Save to RefWorks",
	"manifest_version": 2,
	"version": "3.0.999",
	"description": "Saves references to RefWorks account",
	"page_action": {
		"default_icon": "images/flow16.png",
		"default_title": "Save to RefWorks"
	},
	"permissions": ["http://*/*", "https://*/*", "tabs", "contextMenus"],
	"background": {
		"scripts": [
			"zotero.js",
			"zotero_config.js",
			"errors_webkit.js",
			"api.js",
			"http.js",
			"oauthsimple.js",
			"zotero/connector/connector.js",
			"zotero/connector/cachedTypes.js",
			"zotero/date.js",
			"zotero/debug.js",
			"zotero/xregexp/xregexp.js",
			"zotero/xregexp/addons/build.js",
			"zotero/xregexp/addons/matchrecursive.js",
			"zotero/xregexp/addons/unicode/unicode-base.js",
			"zotero/xregexp/addons/unicode/unicode-categories.js",
			"zotero/xregexp/addons/unicode/unicode-zotero.js",
			"zotero/openurl.js",
			"zotero/connector/repo.js",
			"zotero/translation/tlds.js",
			"zotero/connector/translator.js",
			"zotero/connector/typeSchemaData.js",
			"zotero/utilities.js",
			"messages.js",
			"messaging.js",
			"background.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [
				"zotero.js",
				"zotero_config.js",
				"http.js",
				"zotero/connector/cachedTypes.js",
				"zotero/date.js",
				"zotero/debug.js",
				"zotero/openurl.js",
				"zotero/xregexp/xregexp.js",
				"zotero/xregexp/addons/build.js",
				"zotero/xregexp/addons/matchrecursive.js",
				"zotero/xregexp/addons/unicode/unicode-base.js",
				"zotero/xregexp/addons/unicode/unicode-categories.js",
				"zotero/xregexp/addons/unicode/unicode-zotero.js",
				"zotero/rdf/init.js",
				"zotero/rdf/uri.js",
				"zotero/rdf/term.js",
				"zotero/rdf/identity.js",
				"zotero/rdf/match.js",
				"zotero/rdf/rdfparser.js",
				"zotero/translation/translate.js",
				"zotero/connector/translate_item.js",
				"zotero/connector/typeSchemaData.js",
				"zotero/utilities.js",
				"zotero/utilities_translate.js",
				"inject/http.js",
				"inject/progressWindow.js",
				"inject/translator.js",
				"inject/translate_inject.js",
				"messages.js",
				"messaging_inject.js",
				"api.js",
				"inject/inject.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		"images/flow48.png"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"homepage_url": "http://refworks.proquest.com/",
	"icons": {
		"16": "images/flow16.png",
		"48": "images/flow48.png",
		"128": "images/flow128.png"
	},
	"update_url": "https://www.zotero.org/download/everywhere/chrome/update.xml",
	"commands": {
		"_execute_page_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+S"
			}
		}
	}
}
